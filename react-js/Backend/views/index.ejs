    <style>
        .login-form
        {
            text-align: center;
            align-items: center;
            width: 100%;
            margin-top: 20px;
        }
      .container .login-form {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
        width: 100%;
        font-family: Poppins;
        /* max-width: 570px; */
       
        margin: 0 auto;
        padding-top: 4rem;
        padding-bottom: 4rem;
        box-sizing: border-box;
      }
      h2 {
        padding-bottom: 30px;
        text-align: center;
        font-family:'Poppins';
      }
      
      input:disabled {
        cursor: not-allowed;
        border: solid 1px #eee;
      }
      .container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: auto;
      }
      #submitButton1{
        width: 100%;
        height: 40px;
        margin: auto;
        display: block;
        color: #fff;
        background-color: #065492;
        border-color: #065492;
        text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.12);
        box-shadow: 0 2px 0 rgba(0, 0, 0, 0.035);
        border-radius: 4px;
        font-size: 20px;
        cursor: pointer;
      }
      .cardStyle {
        width: 100%;
        border-color: white;
        background: #fff;
        padding: 44px 0px;
        border-radius: 4px;
        margin-top: 20px;
        margin-left: 20rem;
        box-shadow: 0px 0 2px 0 rgba(0, 0, 0, 0.25);
      }
      .login-form input
      {
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        border: none;
        border-radius: 5px;
        background-color: #f4f4f4;
        font-size: 1rem;
      }
    </style>
